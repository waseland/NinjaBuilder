<Window x:Class="Ninja1.Store"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Store" Height="400" Width="500"
        DataContext="{Binding Store, Source={StaticResource Locator}}">
       
    <Grid>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding categorys}" SelectedItem="{Binding SelectedCategory}" Margin="0,0,421,0" Height="359" VerticalAlignment="Top">
            <DataGrid.Columns >
                <DataGridTextColumn Header="ArmorType" Binding="{Binding name}" />
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="{Binding SelectedCategory.name, FallbackValue=#selectedCate#}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,333,0,0"/>
        
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding categorys}" SelectedItem="{Binding SelectedCategory}" Margin="76,0,304,0" Height="359" VerticalAlignment="Top">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Armor" Binding="{Binding name}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
